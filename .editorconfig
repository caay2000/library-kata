root = true

[*.{kt,kts}]
ktlint_standard_multiline-if-else = disabled
ktlint_standard_multiline-expression-wrapping = enabled
ktlint_function_naming_ignore_when_annotated_with = TestCase

indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 180

[gradlew.bat]
end_of_line = lf

[*.md]
trim_trailing_whitespace = true
